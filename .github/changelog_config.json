{
    "categories": [
        {
            "title": "## 🚀 Features",
            "labels": ["feature", "enhancement", "feat"]
        },
        {
            "title": "## 🐛 Bug Fixes",
            "labels": ["bug", "fix", "bugfix"]
        },
        {
            "title": "## 📚 Documentation",
            "labels": ["documentation", "docs"]
        },
        {
            "title": "## 🔧 Maintenance",
            "labels": ["maintenance", "refactor", "chore"]
        },
        {
            "title": "## 🔒 Security",
            "labels": ["security"]
        },
        {
            "title": "## ⚡ Performance",
            "labels": ["performance", "perf"]
        },
        {
            "title": "## 🧪 Testing",
            "labels": ["test", "testing"]
        },
        {
            "title": "## 📦 Dependencies",
            "labels": ["dependencies", "deps"]
        },
        {
            "title": "## 🔄 Other Changes",
            "labels": []
        }
    ],
    "ignore_labels": [
        "ignore-for-release",
        "duplicate",
        "question",
        "invalid",
        "wontfix"
    ],
    "sort": "ASC",
    "template": "${{CHANGELOG}}",
    "pr_template": "- ${{TITLE}} (#${{NUMBER}}) @${{AUTHOR}}",
    "empty_template": "- No changes",
    "label_extractor": [
        {
            "pattern": "^(feat|feature)(\\(.+\\))?!?:",
            "target": "feature"
        },
        {
            "pattern": "^(fix|bugfix)(\\(.+\\))?!?:",
            "target": "bug"
        },
        {
            "pattern": "^(docs|doc)(\\(.+\\))?!?:",
            "target": "documentation"
        },
        {
            "pattern": "^(chore|refactor|style|test)(\\(.+\\))?!?:",
            "target": "maintenance"
        },
        {
            "pattern": "^(perf|performance)(\\(.+\\))?!?:",
            "target": "performance"
        }
    ],
    "max_tags_to_fetch": 200,
    "max_pull_requests": 1000,
    "max_back_track_time_days": 365
}
